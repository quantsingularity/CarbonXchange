# CarbonXchange Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/carbonxchange
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=1000 per hour

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With

# Blockchain Configuration
WEB3_PROVIDER_URL=https://polygon-mainnet.infura.io/v3/your-project-id
WEB3_PRIVATE_KEY=your-private-key-here
CARBON_TOKEN_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
MARKETPLACE_CONTRACT_ADDRESS=0x0987654321098765432109876543210987654321

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@carbonxchange.com

# External Services
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Security Configuration
BCRYPT_LOG_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=1800

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=carbonxchange.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring Configuration
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=carbonxchange:

# Background Tasks
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Development/Testing
TESTING=false
WTF_CSRF_ENABLED=true
SQLALCHEMY_TRACK_MODIFICATIONS=false
SQLALCHEMY_ECHO=false

# CarbonXchange Mobile Frontend Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API Base URL
# For local development on emulator: use http://10.0.2.2:3000 (Android) or http://localhost:3000 (iOS Simulator)
# For local development on physical device: use your computer's local IP (e.g., http://192.168.1.100:3000)
# For production: use your production API URL (e.g., https://api.carbonxchange.com)
API_BASE_URL=http://localhost:3000/api/v1

# =============================================================================
# App Configuration
# =============================================================================

# App Environment (development, staging, production)
APP_ENV=development

# Enable debug logging
DEBUG=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable blockchain features
ENABLE_BLOCKCHAIN=true

# Enable biometric authentication
ENABLE_BIOMETRIC_AUTH=false

# Enable push notifications
ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# Optional Services
# =============================================================================

# Analytics tracking ID (if using analytics)
ANALYTICS_ID=

# Sentry DSN (if using error tracking)
SENTRY_DSN=

# =============================================================================
# Development Settings
# =============================================================================

# Show Redux DevTools
SHOW_REDUX_DEVTOOLS=true

# Log API requests
LOG_API_REQUESTS=true
